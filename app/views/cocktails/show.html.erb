<div id="show">
  <div class="wrapper" style="background-image:  linear-gradient(-225deg, rgba(189,195,199,0.5) 0%, rgba(44,62,80,0.5) 50%), url(<%= @cocktail.picture %>);"></div>

  <div class="content">
    <div class="title">
      <h1>Cocktail: <%= @cocktail.name %></h1>
    </div>

    <h4>Ingredients & Dose</h4>
    <div class="list">
      <ul>
        <% @cocktail.doses.each do |dose|  %>
        <li>
          <%= dose.description %>
          <%= dose.ingredient.name %>
        </li>
        <% end  %>
      </ul>
      <ul>
        <% @cocktail.doses.each do |dose|  %>
        <li>
          <%= link_to "Delete", dose_path(dose.id), method: "delete" %>
        </li>
      <% end  %>
    </ul>
    </div>
    <%= link_to "New dose", new_cocktail_dose_path(@cocktail), class: "btn btn-primary" %>

    <h4>Instructions</h4>
    <p><%= @cocktail.instructions %></p>



  </div>
</div>


